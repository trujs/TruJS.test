{
    "name": "TruJS.test"
    , "version": "0.1.3"

    , "entries": [
        {
            "type": "module"
            , "description": "The unit/functional test runner for TruJS project test files"

            , "repos": [
                {
                    "type": "git"
                    , "name": "TruJS"
                    , "url": "https://github.com/trujs/TruJS.git"
                    , "branch": "version-0.1"
                }
            ]

            , "module": {
                "global": [":global"]
                , "nodeRequire": [":require"]
                , "nodeProcess": [":process"]
                , "nodeModule": [":module"]
                , "nodeDirname": [":__dirname"]
                , "document": [":require(\"min-document\")"]
                , "xmlHttpRequest": [":require(\"w3c-xmlhttprequest\").XMLHttpRequest"]
                , "run": ["TruJS.test._Run", []]
            }

            , "format": "node"

            , "package": {
                "dependencies": {
                    "trujs-cmdargs": "0.0.3"
                    , "body-parser": "^1.18.2"
                    , "min-document": "^2.19.0"
                    , "w3c-xmlhttprequest": "^2.1.2"
                }
                , "keywords": [
                  "TruJS"
                  , "compile"
                  , "assemble"
                ]
                , "repository": {
                  "type": "git"
                  , "url": "git+https://github.com/trujs/TruJS.test.git"
                }
                , "author": "Rodger McIntosh"
                , "license": "MIT"
                , "bugs": {
                  "url": "https://github.com/trujs/TruJS.test/issues"
                }
                , "homepage": "https://github.com/trujs/TruJS.test#readme"
            }

            , "output": "./builds/{name}/index.js"
        }
        , {
            "type": "test"
            , "description": "The test package for both node and browser"

            , "format": "node"

            , "output": "./builds/{name}/"
        }
        , {
            "type": "files"
            , "description": "This is the TruJS.test command line untility and read me file"

            , "files": [
                "../cli.js"
                , "../README.md"
            ]

            , "output": "./builds/{name}/"
        }
        , {
            "type": "module"
            , "description": "The unit/functional test runner for TruJS project test files"

            , "repos": [
                {
                    "type": "git"
                    , "name": "TruJS"
                    , "url": "https://github.com/trujs/TruJS.git"
                    , "branch": "version-0.1"
                }
            ]

            , "module": {
                "global": [":window"]
                , "nodeRequire": null
                , "nodeProcess": null
                , "nodeModule": null
                , "nodeDirname": null
                , "document": [":document"]
                , "xmlHttpRequest": [":XMLHttpRequest"]
                , "httpRequest": ["TruJS.test.delivery._HttpRequest", []]
                , "resultGrid": ["TruJS.test.display._ResultGridFactory", []]
                , "progressBar": ["TruJS.test.display._ProgressBarFactory", []]
            }

            , "format": "browser"
            , "minify": false
            , "namespace": "TruJSTest"

            , "output": "./builds/{name}/public/app.js"
        }
        , {
            "type": "test"
            , "description": "The test package for the browser"

            , "format": "browser"

            , "output": "./builds/{name}/"
        }
        , {
            "type": "routing"
            , "description": "This is the test web server module"

            , "format": "node"

            , "output": "./builds/{name}/server.js"
        }
        , {
            "type": "files"
            , "description": "This script executes the test runner for browsers"

            , "files": [
                "+../+resources/*"
                , "^{resources}/bootstrap/css/bootstrap.min.css"
                , "^{resources}/font-awesome/css/font-awesome.min.css"
                , "^{resources}/font-awesome/fonts/*"
                , "../browser-run.js"
                , "./index.html"
            ]

            , "format": "browser"
            , "minify": false

            , "output": "./builds/{name}/public/"
        }
    ]
}